<!-- Biped Model

    The state space is populated with joints in the order that they are
    defined in this file. The actuators also operate on joints.

    State-Space (name/joint/parameter):
        - rootx     slider      position (m)
        - rootz     slider      position (m)
        - rooty     hinge       angle (rad)
        - lthigh    hinge       angle (rad)
        - lshin     hinge       angle (rad)
        - lfoot     hinge       angle (rad)
        - rthigh    hinge       angle (rad)
        - rshin     hinge       angle (rad)
        - rfoot     hinge       angle (rad)
        - rootx     slider      velocity (m/s)
        - rootz     slider      velocity (m/s)
        - rooty     hinge       angular velocity (rad/s)
        - lthigh    hinge       angular velocity (rad/s)
        - lshin     hinge       angular velocity (rad/s)
        - lfoot     hinge       angular velocity (rad/s)
        - rthigh    hinge       angular velocity (rad/s)
        - rshin     hinge       angular velocity (rad/s)
        - rfoot     hinge       angular velocity (rad/s)

    Actuators (name/actuator/parameter):
        - lthigh    hinge       torque (N m)
        - lshin     hinge       torque (N m)
        - lfoot     hinge       torque (N m)
        - rthigh    hinge       torque (N m)
        - rshin     hinge       torque (N m)
        - rfoot     hinge       torque (N m)
-->

<mujoco model="biped_2d">
    <compiler angle="degree" coordinate="local" inertiafromgeom="auto"/>
    <default>
        <joint armature="0" damping="0.0" limited="true" solimplimit="0 .8 .03" solreflimit=".02 1" stiffness="0"/>
        <geom conaffinity="0" condim="3" contype="1" friction=".9 .1 .1" rgba="0.8 0.6 .4 1" solimp="0.0 0.8 0.01"
              solref="0.02 1"/>
        <motor ctrllimited="true" ctrlrange="-1 1"/>
    </default>
    <size nstack="300000" nuser_geom="1"/>
    <option gravity="0 0 -9.81" timestep="0.002"/>
    <asset>
        <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100"/>
        <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom" random="0.01"
                 rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
        <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d" width="100"/>
        <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60" texture="texplane"/>
        <material name="geom" texture="texgeom" texuniform="true"/>
    </asset>
    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3"
               specular=".1 .1 .1"/>
        <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1"
              size="60 60 60" type="plane"/>
        <body name="torso" pos="0 0 0.6">
            <camera name="track" mode="trackcom" pos="0 -3 0.3" xyaxes="1 0 0 0 0 1"/>
            <joint armature="0" axis="1 0 0" damping="0" limited="false" name="rootx" pos="0 0 0" stiffness="0"
                   type="slide"/>
            <joint armature="0" axis="0 0 1" damping="0" limited="false" name="rootz" pos="0 0 0" stiffness="0"
                   type="slide"/>
            <joint armature="0" axis="0 -1 0" damping="0" limited="false" name="rooty" pos="0 0 0" stiffness="0"
                   type="hinge"/>
            <inertial pos="0 0 0.2" mass="12" diaginertia="0.1675 0.1675 0.015"/>
            <geom fromto="0 0 0 0 0 0.4" name="torso" size="0.05" type="capsule"/>
            <body name="lthigh" pos="0 0 0">
                <joint axis="0 -1 0" damping="0.0" name="lthigh" pos="0 0 0" range="-45 135" stiffness="0"
                       type="hinge"/>
                <inertial pos="0 0 -0.15" mass="0.5" diaginertia="0.0039 0.0039 0.000225"/>
                <geom axisangle="0 -1 0 0" name="lthigh" pos="0 0 -0.15" rgba="0 0.4470 0.7410 1"
                      size="0.03 0.15" type="capsule"/>
                <body name="lshin" pos="0 0 -0.3">
                    <joint axis="0 -1 0" damping="0.0" name="lshin" pos="0 0 0" range="-135 0" stiffness="0"
                           type="hinge"/>
                    <inertial pos="0 0 -0.15" mass="0.5" diaginertia="0.0039 0.0039 0.000225"/>
                    <geom axisangle="0 -1 0 0" name="lshin" pos="0 0 -0.15" rgba="0.8500 0.3250 0.0980 1"
                          size="0.03 0.15" type="capsule"/>
                    <body name="lfoot" pos="0 0 -0.3">
                        <joint axis="0 -1 0" damping="0.0" name="lfoot" pos="0 0 0" range="-50 50" stiffness="0"
                               type="hinge"/>
                        <inertial pos="0 0 0" axisangle="0 -1 0 90" mass="0.2" diaginertia="0.0007 0.0007 0.00009"/>
                        <geom axisangle="0 -1 0 90" name="lfoot" pos="0 0 0" rgba="0.4940  0.1840 0.5560 1"
                              size="0.03 0.10" type="capsule"/>
                    </body>
                </body>
            </body>
            <body name="rthigh" pos="0 0 0">
                <joint axis="0 -1 0" damping="0.0" name="rthigh" pos="0 0 0" range="-45 135" stiffness="0"
                       type="hinge"/>
                <inertial pos="0 0 -0.15" mass="0.5" diaginertia="0.0039 0.0039 0.000225"/>
                <geom axisangle="0 -1 0 0" name="rthigh" pos="0 0 -0.15" rgba="0.8500 0.3250 0.0980 1"
                      size="0.03 0.15" type="capsule"/>
                <body name="rshin" pos="0 0 -0.3">
                    <joint axis="0 -1 0" damping="0.0" name="rshin" pos="0 0 0" range="-135 0" stiffness="0"
                           type="hinge"/>
                    <inertial pos="0 0 -0.15" mass="0.5" diaginertia="0.0039 0.0039 0.000225"/>
                    <geom axisangle="0 -1 0 0" name="rshin" pos="0 0 -0.15" rgba="0.4940 0.1840 0.5560 1"
                          size="0.03 0.15" type="capsule"/>
                    <body name="rfoot" pos="0 0 -0.3">
                        <joint axis="0 -1 0" damping="0.0" name="rfoot" pos="0 0 0" range="-50 50" stiffness="0"
                               type="hinge"/>
                        <inertial pos="0 0 0" axisangle="0 -1 0 90" mass="0.2" diaginertia="0.0007 0.0007 0.00009"/>
                        <geom axisangle="0 -1 0 90" name="rfoot" pos="0 0 0" rgba="0 0.4470 0.7410 1"
                              size="0.03 0.10" type="capsule"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>
    <actuator>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="lthigh" name="lthigh"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="lshin" name="lshin"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="lfoot" name="lfoot"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="rthigh" name="rthigh"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="rshin" name="rshin"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="rfoot" name="rfoot"/>
    </actuator>
</mujoco>
